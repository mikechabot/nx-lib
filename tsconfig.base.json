{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDirs": ["."],
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@mikechabot/nx-publishable": ["libs/nx-publishable/src/index.ts"],
      "@nx-lib/nx-buildable": ["libs/nx-buildable/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
